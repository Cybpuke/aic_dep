worker 2



sudo dnf install -y nfs-utils

sudo systemctl enable --now nfs-server rpcbind



sudo mkdir -p /data/nfs/airflow

sudo chown -R 50000:50000 /data/nfs/airflow

sudo chmod -R 770 /data/nfs/airflow



nano /etc/exports 



/data/nfs/airflow 192.168.5.0/24(rw,sync,no_root_squash,no_all_squash)



sudo firewall-cmd --permanent --add-service={nfs,mountd,rpc-bind}

sudo firewall-cmd --reload





all nodes 



sudo dnf install -y nfs-utils

sudo systemctl enable --now rpcbind



sudo setsebool -P virt_use_nfs 1



msr1



helm repo add nfs-subdir-external-provisioner https://kubernetes-sigs.github.io/nfs-subdir-external-provisioner/



helm install nfs-provisioner nfs-subdir-external-provisioner/nfs-subdir-external-provisioner \

  --create-namespace \

  --namespace nfs-provisioner \

  --set nfs.server=192.168.5.242 \

  --set nfs.path=/data/nfs/airflow \

  --set storageClass.name=nfs-client
